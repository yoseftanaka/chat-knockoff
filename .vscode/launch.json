{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "inputs": [
    {
      "id": "slsDebuggerPort",
      "type": "promptString",
      "default": "3004",
      "description": "Which PORT you want to use to run your local serverless?"
    },
    {
      "id": "slsStage",
      "type": "pickString",
      "default": "dev",
      "options": [
        "dev",
      ],
      "description": "Which STAGE you want to use to run your local serverless?"
    },
    {
      "id": "slsFunctionName",
      "type": "pickString",
      "options": [
        "processDelivery",
        "deliveryRejected"
      ],
      "description": "Which FUNCTION you want to invoke from your local serverless?"
    },
    {
      "id": "ssmFile",
      "type": "pickString",
      "default": "",
      "options": [
        "",
        ".local"
      ],
      "description": "Which SSM you want to use to run your local serverless?"
    },
    {
      "id": "dotenvFile",
      "type": "pickString",
      "default": "local",
      "options": [
        "local",
        "id"
      ],
      "description": "Which .ENV file you want to use to run your local serverless?"
    }
  ],
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Serverless - Launch Local üß©",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/serverless/bin/serverless",
      "args": [
        "offline",
        "--httpPort",
        "${input:slsDebuggerPort}",
        "--stage",
        "${input:slsStage}",
        "--skipCacheInvalidation",
        "--noTimeout"
      ],
      "env": {
        "SLS_DEBUG": "*",
        "SLS_SSM_FILE": "serverless-ssm${input:ssmFile}.yml",
        "SLS_OPTIMIZE_MODE": "local",
      },
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Serverless - Invoke Local ü•ä",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/serverless/bin/serverless",
      "args": [
        "invoke",
        "local",
        "-f",
        "${input:slsFunctionName}",
        "--stage",
        "${input:slsStage}",
        "--path",
        "${input:slsFunctionName}.invoke-local-msg.json",
      ],
      "env": {
        "SLS_DEBUG": "*",
        "SLS_SSM_FILE": "serverless-ssm${input:ssmFile}.yml",
        "SLS_OPTIMIZE_MODE": "local",
      },
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "NestJS - Launch Local üêàüê±",
      "args": [
        "${workspaceFolder}/src/main.ts"
      ],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "envFile": "${workspaceFolder}/.env/${input:dotenvFile}.env",
      "env": {
        "APP_PORT": "3005"
      },
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Current File üß™",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["${fileBasename}", "--config", "jest.config.ts", "--silent"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      }
    }
  ]
}
